.bx--module.bx--module--double
  .bx--module__inner
    .bx--module__header
      .bx--module__title Log in
    .bx--module__content
      = form_tag session_path, method: :post do
        .bx--form-item
          = label_tag :email, 'Email', class: 'bx--label'
          br/
          = email_field_tag :email, nil, autofocus: true, class: 'bx--text-input'
        .bx--form-item
          = label_tag :password, 'Password', class: 'bx--label'
          br/
          = password_field_tag :password, nil, autocomplete: "off", class: 'bx--text-input'
        .bx--form-item
          = check_box_tag :remember_me, 'true', false, { id: 'remember_me', class: 'bx--checkbox' }
          = label_tag :remember_me, class: 'bx--checkbox-label' do
            span.bx--checkbox-appearance
              svg.bx--checkbox-checkmark fill-rule="evenodd" height="9" viewbox=("0 0 12 9") width="12" 
                path d=("M4.1 6.1L1.4 3.4 0 4.9 4.1 9l7.6-7.6L10.3 0z") 
            | Remember me
        .bx--form-item
          = submit_tag "Log in", class: 'bx--btn bx--btn--primary'
